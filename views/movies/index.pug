extends ../layouts/main.pug
block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Title
            th Status
            th Author
            th Actions
            th

        tbody
          each movie in movies
            tr
              td
                a(href=`/movies/${movie.id}`)= movie.title
              td= movie.status
              td= `${movie.author.firstName} ${movie.author.lastName}`
              td
                a(href=`/movies/${movie.id}/edit`) edit
                =' | '
                form.destroy(action=`/movies/destroy`, method="POST", onsubmit= `return confirm("are you sure???")`)
                    input(type="hidden", name="id", value=movie.id)
                    input(type="submit", value="delete")